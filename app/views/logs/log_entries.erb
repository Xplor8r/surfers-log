<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/surfers/<%= current_user.slug %>">Your Log</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/log_entries">All Log Entries<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/new">Create Log Entry</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href='/logout'>Logout</a>
      </li>
    </ul>
  </div>
</nav>
<div>
<h2>Welcome, <%= current_user.surfername %></h2>

  <% @log_entries.each do |log_entry| %>
    <div>
      <h3><%= log_entry.surf_spot %></h3>
      <p>Date: <%= log_entry.date %><br>
      By: <%= log_entry.surfer.surfername %></p>

      <p><% if log_entry.swell_size != "" %>
        Swell: <%= log_entry.swell_size %>
          <% if log_entry.swell_direction != "" %>
            <%= log_entry.swell_direction %>
          <% end %><br>
      <% end %>

      <% if log_entry.conditions != "" %>
        Condtions: <%= log_entry.conditions %><br>
      <% end %>
      <% if log_entry.wave_count != "" %>
        Wave Count: <%= log_entry.wave_count %></p>
      <% end %>

      <% if log_entry.image_url != "" %>
        <img src="<%= log_entry.image_url %>" alt="surfing, waves">
      <% end %>
      <p><%= log_entry.content %></p>
    </div>
  <% end %>
</div>
