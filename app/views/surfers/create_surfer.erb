<h2 class="break">Sign Up</h2>

<form action="/signup" method="POST">
  <div class="form-row break">
    <div class="form-group col-md-6">
      <div>
        <label for="surfername">Surfer Name</label>
        <input type="text" class="form-control" id="surfername" name="surfername" placeholder="Enter Surfer Name">
      </div><br>
      <div>
        <label for="email">Email address</label>
          <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else!</small>
      </div><br>
      <div>
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
      </div>
      <br><button type="submit" class="btn btn-primary">Submit</button>
    </div>
    <div class="form-group col-md-6">
      <div>
        <img src="/images/mikesurf3.jpg">
      </div>
    </div>
  </div>
</form>
